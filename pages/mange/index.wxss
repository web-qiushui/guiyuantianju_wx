/* 最外层容器 */
.test_container{
    padding-top:10px;
    width:100%;
    height:100%;
    background: #F0F0F0;
  }
  /* 内容区域 主要配置定位 以及超出隐藏,使删除按钮过渡更加丝滑 */
  .content{
    /* width:702rpx; */
    /* width: 100%; */
    /* height:144rpx; */
    /* padding: 24rpx 70rpx 24rpx 32rpx; */
    background: #fff;
    display: flex;
    position: relative;
    overflow: hidden; 
    border-radius: 10rpx;
    transition: all 0.3s;
    /* margin:0rpx 0rpx 40rpx 25rpx;  */
  }
  /* 左边区域沾满剩余区域 */
  .oper-left{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex:1;
    font-size: 34rpx;
    /* width: 1005; */
    color: rgba(0, 0, 0, 0.9);
    padding: 24rpx 70rpx 24rpx 32rpx;
  }
  .left-oper{
    font-size: 28rpx;
    color: #3662EC;
  }
  /*删除按钮 主要定位以及动画*/
  .right{
    position: absolute;
    right:-120rpx;
    top:0;
    font-size: 28rpx;
    width:130rpx;
    /* height:100%;
    width: 130rpx; */
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #FA5151;
    color:aliceblue;
   
    /* border-radius: 5rpx; */
  }
  .touchList{
    position:relative;
  }
  
  .touchList .device_item{
    position: relative;
    left: 0;
    transition: all 0.3s;
  }
  .touchList.moving .device_item{
    left: -140rpx;
  }
  .touchList .touchBtn{
    position: absolute;
    display: flex;
    height: 100%;
    right: -140rpx;
    top: 0;
    transition: all 0.3s;
  }
  .touchList.moving .touchBtn{
    right: 0rpx;
  }
  
  .touchList .touchBtn view{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 140rpx;
    height: 100%;
    color: #fff;
    font-size: 28rpx;
  }
  .touchList .touchBtn .editBtn{
    background: #0070CC;
  }
  
  .touchList .touchBtn .delBtn{
    background: red;
  }

  .crop-image{
    width: 28rpx;
    height: 32rpx;
    margin-right: 22rpx;
    vertical-align: middle;
}

