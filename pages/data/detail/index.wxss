.container{
    padding: 24rpx 24rpx 120rpx;
    background-color: #f7f7f8;
}

.group{
    background-color: #fff;
    border-radius: 16rpx;
    margin-bottom:24rpx;
}

.group-title{
    font-size: 32rpx;
    color: #343434;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 28rpx 0;
}

.bl{
    width: 6rpx;
    height: 32rpx;
    background-color: #2C4BFF;
    margin: 0 10rpx 0 16rpx;
}

.group-list{
    margin: 0 32rpx;
    padding: 28rpx 0;
    border-top: 1px solid #f3f3f3;
}

.group-list-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 20rpx;
}

.form-item{
    padding: 0 0 28rpx 0;
    margin: 0 32rpx;
    border-bottom: 1px solid #f3f3f3;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.label{
    color: #A3A5B0;
    width: 120rpx;
    margin-right: 40rpx;
    font-size: 30rpx;
}

.block{
    font-size: 30rpx;
    color: #343434;
    flex-grow: 1;
}

.textarea-wrap{
    height: 142rpx;
    padding: 20rpx;
    background-color: #f8f8f8;
    position: relative;
    border-radius: 12rpx;
}

.textarea, .area-copy{
    width: 100%;
    height: 142rpx;
}
.placeholder{
    color: rgb(207, 207, 207);
}
.area-copy{
    background-color: rgb(248, 248, 248);
    color: rgb(207, 207, 207);
}

.len{
    position: absolute;
    right: 24rpx;
    bottom: 16rpx;
    font-size: 24rpx;
    color: #343434;
}

/* 提交按钮 */
.footer{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 120rpx;
    background-color: #fff;
    padding: 0 44rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    z-index: 1000;
}

.cancel, .submit{
    width: 320rpx;
    height: 90rpx;
    border-radius: 45rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 34rpx;
}

.cancel{
    color: #343434;
    background-color: #F5F6FA;
}

.submit{
    color: #fff;
    background-color: #2C4BFF;
}