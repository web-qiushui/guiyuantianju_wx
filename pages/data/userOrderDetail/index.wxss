/*  按钮加减 */
.stepper {
    width:80px;
    height:26px;
    margin: 0 auto;
    border: 1px solid #ccc;
    border-radius: 3px;
  }
  /*加号和减号*/
  .stepper text {
    float: left;
    width: 19px;
    line-height: 26px;
    text-align: center;
  }
  /*数值*/
  .stepper input {
    width: 40px;
    height: 26px;
    float: left;
    margin: 0 auto;
    text-align: center;
    font-size: 12px;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
  }
  /*普通样式*/
  .stepper .normal {
    color:black;
  }
  /*禁用样式*/
  .stepper .disable {
    color: #ccc;
  }
  .footer{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 120rpx;
    background-color: #fff;
    padding: 0 44rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    z-index: 1000;
  }