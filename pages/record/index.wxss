/* 作物信息 */
.crop-content{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx 50rpx 20rpx;
    margin-top: 24rpx;
    flex-wrap: wrap;
    /* width: 100%; */
}

.crop-image{
    width: 28rpx;
    height: 32rpx;
    margin-right: 22rpx;
    vertical-align: middle;
}

.crop-item{
    width: calc(50% - 14rpx);
}
.crop-title {
    font-weight: bold;
    color: #3D3D3D;
}

.crop-text {
    font-weight: 500;
    color: #3662EC;
}

.select-crop{
    background-color: #07C160 !important;
