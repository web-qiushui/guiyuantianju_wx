}

.padding-box {
    
    height: 180rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    line-height: 48rpx;
    letter-spacing: 1px;
    margin-bottom: 18rpx;
    padding: 22rpx 22rpx 22rpx 22rpx;
    background: rgba(0, 0, 0, 0.05);
}

.select-crop .crop-title {
    font-weight: bold;
    color: #fff;
}

.select-crop .crop-text {
    color: #fff;
