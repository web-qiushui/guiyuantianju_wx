.loadingSvg {
    width: 70rpx;
    height: 70rpx;
    margin: 215rpx auto;


-webkit-animation: rotate 3s 0s infinite linear;
animation: rotate 3s 0s infinite linear;
}

@-webkit-keyframes rotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

