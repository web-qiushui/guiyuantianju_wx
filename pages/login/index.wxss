.bgImg{
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    background-size: 100% 100%;
}
.loginTit{
    margin-top: 24vh;
    color: #fff;
    text-align: center;
    margin-bottom: 48rpx;
    font-size: 60rpx;
    font-weight: 600;
}
.loginTxt{
    text-align: center;
    color: #fff;
    margin-bottom: 80rpx;
    font-size: 36rpx;
}
/* 登录表单 */
.form{

    padding: 76rpx 120rpx;
    /* background-color: #000; */
    position: relative;
    top: -80rpx;
    z-index: 3;
    height: 100vh;
    border-top-left-radius: 56rpx;
    border-top-right-radius: 56rpx;
   
}

.form-item{
    border: 1px solid #fff;
    border-radius: 24px;
    margin-bottom: 40rpx;
    transition: all .3s;
}

.label{
    font-size: 36rpx;
    font-weight: 550;
}

.block{
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.ipt{
    flex-grow: 1;
    height: 48rpx;
  color: #fff;
}

.placeholder{
    color: #fff;
    font-size: 30rpx;
}

.submit, .register, .forgot{
    height: 112rpx;
    width: 100%;
    border-radius: 56rpx;
    text-align: center;
    line-height: 112rpx;
    font-size: 36rpx;
    font-weight: 550;
}

.submit{
    margin-top: 77rpx;
    color: #fff;
    background-color: #09BB07;
}

.submit:active{
    background-color: #09BB07;
}

.register{
    margin-top: 10rpx;
    text-align: center;
    width: 100%;
    color: #fff;
    font-size: 30rpx;
}

.registerTxt{
    text-decoration:underline
}

.forgot{
    margin-top: 40rpx;
    color: #09BB07;
    font-size: 28rpx;
    font-weight: 500;
}

.error-info{
    width: 84rpx;
    height: 40rpx;
    text-align: center;
    line-height: 42rpx;
    border: 1px solid #ff0000;
    background-color: rgba(255, 0, 0, 0.1);
    color: #ff0000;
    border-radius: 24rpx;
    font-size: 24rpx;
    transition: all .3s;
}